<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.itis.khairullovruslan.controlwork.controller.BotController">
    <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.bottomAnchor="0">

        <Label fx:id="welcomeLabel" alignment="CENTER" cache="true" cacheHint="SCALE" text="введите команду" textAlignment="CENTER"
               textFill="black">
            <font>
                <Font name="VirgilCustom" size="130.0"/>
            </font>
        </Label>

        <TextField fx:id="commandField" maxWidth="1000"
                   style="-fx-background-color: transparent; -fx-border-color: black; -fx-border-bottom-color: #a71400; -fx-border-width: 0 0 1 0;"/>

        <Label fx:id="executeLabel"  accessibleRole="BUTTON"
               text="execute" textFill="#970000">
            <font>
                <Font name="Chalkboard" size="48.0"/>
            </font>
        </Label>

        <TextArea fx:id="answerText"  cache="true" cacheHint="SCALE" text="">
            <font>
                <Font name="VirgilCustom" size="14.0"/>
            </font>
        </TextArea>

    </VBox>
</AnchorPane>